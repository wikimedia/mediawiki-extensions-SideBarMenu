{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery"
	],
	"globals": {
		"OO": false,
		"sidebarmenu": false,
		"jQuery": false,
		"mediaWiki": false,
		"mw": false
	},
	"rules": {
		"eqeqeq": "warn",
		"no-shadow": "warn",
		"vars-on-top": "warn",
		"one-var": "warn",
		"no-unused-vars": "warn",
		"no-underscore-dangle": "warn",
		"no-jquery/variable-pattern": "warn",
		"no-jquery/no-sizzle": "warn",
		"no-jquery/no-class-state": "warn",
		"no-jquery/no-animate-toggle": "warn",
		"no-jquery/no-global-selector": "warn"
	}
}
